---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Home";

const socialLinks = [
  {
    url: "https://www.instagram.com/mrabriggs/",
    icon: "fab fa-instagram",
    colour: "orange",
  },
  {
    url: "https://www.linkedin.com/in/brggs/",
    icon: "fab fa-linkedin",
    colour: "blue",
  },
  {
    url: "https://github.com/brggs",
    icon: "fab fa-github",
    colour: "purple",
  },
  {
    url: "https://app.thestorygraph.com/profile/brggs",
    icon: "fa fa-book",
    colour: "purple2",
  },
  {
    url: "mailto:andrew@brggs.co.uk",
    icon: "fa fa-envelope",
    colour: "green",
  },
];

const colourMap = {
  orange: "bg-orange-500",
  blue: "bg-blue-700",
  purple: "bg-purple-500",
  purple2: "bg-rose-600",
  green: "bg-green-600",
};
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="grow flex flex-col justify-center space-y-6 p-6 max-w-lg md:max-w-xl mx-auto text-center text-xl md:text-2xl"
  >
    <h1 class="text-3xl md:text-4xl">
      Hi, I'm <span class="text-emerald-400">Andy Briggs</span> ðŸ‘‹
    </h1>

    <p>
      I'm a software engineer based in the UK, working as Head of Engineering at {
        " "
      }
      <a
        href="https://surevine.com/"
        target="_blank"
        rel="noreferrer"
        class="text-lime-400 hover:text-lime-200"
      >
        Surevine</a
      >.
    </p>

    <p>
      My side project{" "}
      <a
        href="https://curiouscoders.co.uk/"
        target="_blank"
        rel="noreferrer"
        class="text-fuchsia-500 hover:text-fuchsia-300"
      >
        Curious Coders</a
      >
      teaches kids about coding and technology, through videos and activities.
    </p>

    <p>
      I also run the {" "}
      <a
        href="https://bccd.uk/"
        target="_blank"
        rel="noreferrer"
        class="text-violet-400 hover:text-violet-200"
      >
        Bishops Cleeve CoderDojo</a
      >, our local coding club.
    </p>

    <div class="flex mx-auto text-4xl pt-4 space-x-4">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class={`${colourMap[link.colour]} rounded-full w-16 h-16 flex items-center justify-center 
        duration-300 text-slate-100 text-2xl md:text-4xl transition-transform hover:scale-110`}
          >
            <i class={`${link.icon} font-bold`} />
          </a>
        ))
      }
    </div>
  </div>
</BaseLayout>
